<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical">

            <Button
                android:id="@+id/fir_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List(BaseApapter/SimpleAdapter)" />

            <Button
                android:id="@+id/fir_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picker(Normal/Dialog)" />

            <Button
                android:id="@+id/fir_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GridView" />
            <Button
                android:id="@+id/fir_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinner" />
             <Button
                android:id="@+id/fir_button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ProgressBar" />
             <Button
                android:id="@+id/fir_button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebView" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>